<!--pages/addaddress/addaddress.wxml-->
<view style="">
<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >收货人:</label>

<input  class="fr" maxlength="10" placeholder="11" />
</view>

<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >手机号码:</label>

<input  class="fr" maxlength="10" placeholder="11" />
</view>

<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">


<picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
   <view class="picker">
    所在地区：{{array[index]}}
   </view>
 </picker>
</view>

<view style="padding:10px 30px; border-bottom: 1px solid #ddd;">
<label >详细地址:</label>

<input  class="fr" maxlength="10" placeholder="如街道门牌号等" />

</view>

</view>

<button class="saveBtn" style="background-color:#f5c243;color:#fff"> 保存 </button>
